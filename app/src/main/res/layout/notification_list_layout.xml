<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pendingOrdersConstraintlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="6sp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/layoutsAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/etsAddressField"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".7"
            android:text="From: "
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/etsAddressValue"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_weight=".3"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutdAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/layoutsAddress"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/etdAddressField"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".7"
            android:text="To: "
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/etdAddressValue"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_weight=".3"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layoutTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/layoutdAddress"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/etTimeField"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".7"
            android:text="Time: "
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/etTimeValue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/layoutTime"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/etStatusField"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".7"
            android:text="Quantity: "
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/etStatusValue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutDeliveredButton"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/layoutStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <Button
            android:id="@+id/bDelivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:layout_margin="10sp"
            android:layout_marginRight="20sp"
            android:layout_marginStart="20sp"
            android:text="Delivered"
            android:textStyle="bold"
            android:textColor="@color/white" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>